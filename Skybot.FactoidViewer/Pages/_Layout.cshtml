@using Microsoft.AspNetCore.Components.Web
@namespace Skybot.FactoidViewer.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <title>r/Skyrimmods Skybot Factoid Viewer</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link href="_content/Microsoft.Fast.Components.FluentUI/css/reboot.css" rel="stylesheet" />
    <link href="_content/Syncfusion.Blazor.Themes/fabric-dark.css" rel="stylesheet" />
